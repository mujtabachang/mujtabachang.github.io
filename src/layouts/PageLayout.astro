---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE, ANIMATED_BACKGROUND } from "@consts";
import { Tooltips } from "astro-tooltips";
import Background from "@components/backgrounds/Background.astro";

type Props = {
  title: string;
  description: string;
  backgroundType?: "plum" | "dot" | "rose" | "particle";
};

const { title, description, backgroundType = "dot" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${title} | ${SITE.NAME}`} description={description} />

    <Tooltips interactive={false} />
  </head>
  <body>
    {ANIMATED_BACKGROUND && <Background type={backgroundType} />}
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
